# Application Settings
APP_NAME=image-quarry-api
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/image_quarry

# Redis Settings
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Model Management
MODEL_CACHE_DIR=./models
DEFAULT_MODEL_TYPE=vit_h
MODEL_CACHE_SIZE=3

# SAM Model URLs (optional - defaults will be used if not specified)
SAM_VIT_H_URL=https://dl.fbaipublicfiles.com/segment_anything/sam_vit_h_4b8939.pth
SAM_VIT_L_URL=https://dl.fbaipublicfiles.com/segment_anything/sam_vit_l_0b3195.pth
SAM_VIT_B_URL=https://dl.fbaipublicfiles.com/segment_anything/sam_vit_b_01ec64.pth

# Image Processing
MAX_IMAGE_SIZE=10_000_000  # 10MB
MAX_BATCH_SIZE=50
MAX_BATCH_TOTAL_SIZE=100_000_000  # 100MB

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Authentication (optional)
API_KEY_REQUIRED=false
API_KEYS=your-api-key-1,your-api-key-2

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Storage Settings
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
MAX_STORAGE_SIZE=10_000_000_000  # 10GB

# Background Tasks
CELERY_TASK_TIME_LIMIT=3600  # 1 hour
CELERY_TASK_SOFT_TIME_LIMIT=3300  # 55 minutes
CELERY_WORKER_CONCURRENCY=2

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here